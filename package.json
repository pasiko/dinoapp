{
  "name": "dino-warranty-app",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "client": "cd client && npm start",
    "server": "node index.js",
    "server_dev": "nodemon index.js",
    "dev": "concurrently --kill-others-on-fail \"cross-env NODE_ENV=development npm run client\" \"npm run server_dev\"",
    "start": "npm run server",    
    "build": "rimraf ./build && cd client && npm run build && cd .. && copyfiles -u 1 ./client/build/** ./",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "copyfiles": "^2.0.0",
    "cors": "^2.8.4",
    "cross-env": "^5.1.4",
    "express": "^4.16.3",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "nodemon": "^1.17.3"
  }
}
